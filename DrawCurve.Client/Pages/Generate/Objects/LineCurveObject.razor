@using DrawCurve.Domen.Models.Core.Objects;
<div class="card">
    <div class="card-header">
        <h5>Line Curve</h5>
    </div>
    <div class="card-body">
        <div class="form-group">
            <label>Angle:</label>
            <InputNumber class="form-control" @bind-Value="Line.Angle" />
        </div>
        <div class="form-group">
            <label>Length:</label>
            <InputNumber class="form-control" @bind-Value="Line.Length" />
        </div>
        <div class="form-group">
            <label>RPS:</label>
            <InputNumber class="form-control" @bind-Value="Line.RPS" />
        </div>
        <button type="button" class="btn btn-danger" @onclick="() => RemoveObject?.Invoke(Line)">Remove LineCurve</button>
    </div>
</div>
@code {
    [Parameter]
    public LineCurve Line { get; set; }

    [Parameter]
    public Action<LineCurve> RemoveObject { get; set; }
}
